{
  "manifest_version": 2,

  "name": "PageTimer",
  "description": "Measure time it take to load network requests",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}